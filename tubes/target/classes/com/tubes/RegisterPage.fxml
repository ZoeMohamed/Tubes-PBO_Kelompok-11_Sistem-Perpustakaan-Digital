<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controller.RegisterPageController">
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
         <content>
            <VBox alignment="CENTER" spacing="30.0" style="-fx-background-color: #f5f5f5;">
               <padding>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </padding>
               
               <!-- Title -->
               <Label text="Daftar Akun Baru" textFill="#2c3e50">
                  <font>
                     <Font name="System Bold" size="28.0" />
                  </font>
               </Label>
               
               <!-- Registration Form Container -->
               <VBox alignment="CENTER" maxWidth="400.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                  <padding>
                     <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                  </padding>
                  
                  <!-- Username Field -->
                  <VBox spacing="5.0">
                     <Label text="Username:" textFill="#555555">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="usernameField" prefHeight="35.0" promptText="Masukkan username Anda" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
                  </VBox>

                  <!-- First Name Field -->
                  <VBox spacing="5.0">
                     <Label text="Nama Depan:" textFill="#555555">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="firstNameField" prefHeight="35.0" promptText="Masukkan nama depan Anda" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
                  </VBox>
                  
                  <!-- Last Name Field -->
                  <VBox spacing="5.0">
                     <Label text="Nama Belakang:" textFill="#555555">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="lastNameField" prefHeight="35.0" promptText="Masukkan nama belakang Anda" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
                  </VBox>
                  
                  <!-- Email Field -->
                  <VBox spacing="5.0">
                     <Label text="Email:" textFill="#555555">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="emailField" prefHeight="35.0" promptText="Masukkan email Anda" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
                  </VBox>
                  
                  <!-- Phone Field -->
                  <VBox spacing="5.0">
                     <Label text="Nomor Telepon:" textFill="#555555">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="phoneField" prefHeight="35.0" promptText="Masukkan nomor telepon Anda" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
                  </VBox>
                  
                  <!-- Address Field -->
                  <VBox spacing="5.0">
                     <Label text="Alamat:" textFill="#555555">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="addressField" prefHeight="35.0" promptText="Masukkan alamat Anda" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
                  </VBox>
                  
                  <!-- Password Field -->
                  <VBox spacing="5.0">
                     <Label text="Password:" textFill="#555555">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Label>
                     <PasswordField fx:id="passwordField" prefHeight="35.0" promptText="Masukkan password Anda" style="-fx-border-color: #ddd; -fx-border-radius: 5; -fx-background-radius: 5;" />
                  </VBox>
                  
                  <!-- Buttons Container -->
                  <VBox spacing="10.0" alignment="CENTER">
                     <!-- Register Button -->
                     <Button fx:id="registerButton" onAction="#handleRegister" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-weight: bold;" text="Daftar">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </Button>
                     
                     <!-- Back Button -->
                     <Button fx:id="backButton" onAction="#handleBack" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5;" text="Kembali ke Login" />
                  </VBox>
               </VBox>
               
               <!-- Message Label -->
               <Label fx:id="messageLabel" textFill="#e74c3c" visible="false">
                  <font>
                     <Font name="System Bold" size="12.0" />
                  </font>
               </Label>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane> 